# 应用环境变量配置示例
# 复制此文件为.env并填入实际值

# 应用基础配置
APP_NAME=PDF处理与NLP分析系统
APP_VERSION=1.0.0
DEBUG=false

# 后端服务配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4

# 前端服务配置
FRONTEND_PORT=8080

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Neo4j配置
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=pdf

# OCR配置
OCR_LANG=chi_sim+eng
OCR_DPI=200
OCR_PREPROCESS=true

# NLP配置
SUMMARY_DEFAULT_METHOD=auto
SUMMARY_MAX_LENGTH=150
SUMMARY_MIN_LENGTH=30

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=./logs

# 缓存配置
CACHE_TTL=3600  # 1小时
CACHE_TYPE=memory  # memory或redis

